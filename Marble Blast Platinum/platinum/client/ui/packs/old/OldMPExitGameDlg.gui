function OldMPExitGameDlg::onWake(%this) {
	// if (MoveMap.isPushed())
	// 	$Game::DoPushMoveMap = true;
	// MoveMap.pop();
	OldMPExitKickUsers.setActive($Server::Hosting);
	OldMPExitTeams.setActive($MP::TeamMode);
	OldMPExitServer.setActive($Server::Hosting);
	OldMPExitRestart1.setActive($Server::Hosting);
	OldMPExitRestart2.setActive($Server::Hosting);
	OldMPExitTitle.setValue("<shadowcolor:0000007f><shadow:1:1><font:Marker Felt:38><color:ffffff><just:center>Ingame Options");
	OldMPExitRestartTitle.setValue("<shadowcolor:0000007f><shadow:1:1><font:Marker Felt:32><color:ffffff><just:center>Restart:");
	$exit2 = false;

	OldMPExitDisconnect.setBitmap("platinum/client/ui/packs/old/multiplayer/exit/" @ ($Server::Hosting ? "levelselect" : "disconnect"));

	%this.updateButtons();
}


function OldMPExitGameDlg::onSleep(%this) {
	// if ($Game::DoPushMoveMap) {
