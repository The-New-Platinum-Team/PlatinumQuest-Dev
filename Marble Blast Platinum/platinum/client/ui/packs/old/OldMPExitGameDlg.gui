function OldMPExitGameDlg::exit(%this) {
	if ($exit2 || !$Server::Hosting) {
		disconnect();
	} else {
		$exit2 = true;
		commandToServer('LobbyReturn');
	}
}

function OldMPExitGameDlg::updateButtons(%this) {
	OldMPExitOptions.setVisible($pref::OldGui::NewMPExitGame);
	OldMPExitJukebox.setVisible($pref::OldGui::NewMPExitGame);
	OldMPExitJukeboxOld.setVisible(!$pref::OldGui::NewMPExitGame);
}